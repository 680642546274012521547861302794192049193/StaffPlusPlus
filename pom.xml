  <modelVersion>4.0.0</modelVersion>
  <groupId>net.shortninja.staffplus</groupId>
  <artifactId>StaffPlus</artifactId>
  <version>3.2.2-RELEASE</version>
  <name>Staff+</name>
  <description>The ultimate moderation plugin.</description>
    <properties>
        <bukkit.version>1.12-pre5-SNAPSHOT</bukkit.version>
    </properties>
    <repositories>
	<repository>
            <id>spigot-repo</id>
            <url>https://hub.spigotmc.org/nexus/content/groups/public/</url>
        </repository>
	<repository>
		<id>inventive-repo</id>
		<url>https://repo.inventivetalent.org/content/groups/public/</url>
	</repository>
  </repositories>
  <build>
    <sourceDirectory>src</sourceDirectory>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.3</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      <plugin>
      	<groupId>org.apache.maven.plugins</groupId>
      	<artifactId>maven-shade-plugin</artifactId>
      	<version>2.4.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <finalName>Staff+</finalName>
              <outputDirectory>${basedir}/target</outputDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
    <resources>
      <resource>
        <directory>resources</directory>
        <includes>
		  <include>changelog.txt</include>
          <include>config.yml</include>
		  <include>data.yml</include>
          <include>license.txt</include>
          <include>plugin.yml</include>
          <include>lang/**/*.*</include>
        </includes>
        <filtering>false</filtering>
      </resource>
    </resources>
  </build>
